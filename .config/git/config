#
# Git configuration file
#
# Note: If both ~/.config/git/config and ~/.gitconfig exist,
# Git will read from *both* files in that order.
# git-config still writes to ~/.gitconfig.
#

[alias]
  dir = rev-parse --git-dir
  ls = ls-files
  lt = ls-files --full-name :/
  s = status
  su = status -u

[init]
  defaultBranch = main

[status]
  relativePaths = false

[user]
  name = Daniel Li
  email = inflmts@gmail.com
