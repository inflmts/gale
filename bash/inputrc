#
# ~/.inputrc for readline(3)
#
# Distributed with Gale
#

# behavior
set editing-mode vi
set show-all-if-unmodified on
set skip-completed-text on
set revert-all-at-newline on

# appearance
#set show-mode-in-prompt on
#set vi-ins-mode-string "\1\e[0;30;47m\2[i]\1\e[0m\2 "
#set vi-cmd-mode-string "\1\e[0m\2[c] "
set colored-stats on

set keymap vi-command
"\C-r": re-read-init-file
"g":    beginning-of-history
"G":    end-of-history
"v":    ""

set keymap vi-insert
"\C-r": re-read-init-file
"\C-l": clear-screen

# vim:ft=readline
