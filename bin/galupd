#!/bin/sh
# galupd - update Gale
#
# This file is part of Gale.
#

echo() { printf '%s\n' "$1"; }
diag() { printf >&2 '%s\n' "$1"; }

# chdir to home directory
cd || exit

if [ ! -e .data/gale/upd.ninja ]; then
  diag 'Generating update manifest...'
  .gale/bin/galreconf || exit
fi

exec ninja -f .data/gale/upd.ninja "$@"
