#!/bin/sh
# corecon command runner

usage() {
  printf 'usage: corecon config|apply <args>...\n'
}

if [ "$#" -eq 0 ]; then
  usage >&2
  exit 1
fi

cmd=$1
shift

case "$cmd" in
  config)
    . ~/.local/corecon/lib/config ;;
  apply)
    . ~/.local/corecon/lib/apply ;;
  help|--help)
    usage
    exit 0
    ;;
  *)
    printf >&2 'error: unrecognized command: %s\n' "$cmd"
    usage >&2
    exit 1
    ;;
esac
