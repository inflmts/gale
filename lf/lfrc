set ratios 1:3:1
set scrolloff 5
set hidden # show hidden files
set timefmt "Mon 2006/01/02 15:04:05"

# open in firefox
map <c-x>ff &firefox $fx
# open in audacity
map <c-x>au &audacity "$f"
