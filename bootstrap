#!/bin/bash
# bootstrap corecon
#
# This script sets up the environment, symlinks ~/.local/corecon, then runs
# config with the provided arguments.
#

set -e

# setup the environment
. ./bash_profile

link_target=$(realpath .)

# symlink ~/.local/corecon
lib/sym "$link_target" ~/.local/corecon

exec lib/config "$@"
